<form action="/login" method="POST" class="text-center">
    <div class="col d-flex justify-content-center">
        <div id="login-card" class="col-sm-6">
            <div class="card-body">
                <h1 id="login-card-title" class="card-title">Login With Spotify Credentials</h1>
                <br>
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username-field"
                    name="username" placeholder="Username">
                <label for="password" class="form-label">Password</label>
                <input type="text" class="form-control" id="password-field"
                    name="password" placeholder="Password">
                <br>
                <button type='submit' class="btn btn-primary">Login</button>
            </div>
        </div>
        
    </div>
</form>
{{> message}}