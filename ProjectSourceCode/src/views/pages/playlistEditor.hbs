<br>
<div class="centered-container">
    <div id="drop-down">
        {{>dropdown currentPage=currentPage section="right"}}
    </div>
    <br>
    <div class="row">
        <div>
            <form>
                <button type="submit" class="btn">SORT</button>
            </form>
        </div>
    </div>

    <!-- SELECTED PLAYLIST CARD -->
<div id="edit-card-container" class="col-8">
    <div id="edit-playlist-card" >
        <div id="card-header-edit">
            {{selectedPlaylistName}}
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between">
                <span></span>
                <span>Song</span>
                <span>Artist</span>
                <span>Release Date</span>
            </li>

            <!-- Example Playlist Songs -->
            <form action="/makePlaylist" method="POST">
                <ul class="list-group list-group-flush">
                    <input type="hidden" name="currentPage"
                        value="{{currentPage}}">
                    {{#each playlist_songs}}
                    <li id="song-list-group"
                        class="list-group-item d-flex justify-content-between">
                        <input id={{this.song_id}} type="checkbox" name="tracks"
                            value={{this.song_id}}>
                        <span>{{this.name}}</span>
                        <span>{{this.artist}}</span>
                        <span>{{this.album_release}}</span>
                    </li>
                    {{/each}}
                </ul>
                <button type="submit" class="btn">Delete</button>
            </form>
        </ul>
    </div>
</div>