<div id="new-playlist-card">
    <div class="card">
        <div class="card-body">
            {{#if newPlaylistName}}
            <h3 id="playlist-title">{{newPlaylistName}}</h3>
            <!-- Title element hidden initially -->
            {{else}}
            <form action="/makePlaylist" method="POST">
                <input type="hidden" name="currentPage"
                    value="{{currentPage}}">
                <input autocomplete="off" type="text" class="form-control mb-3"
                    id="playlist-name" name="newName"
                    placeholder="playlist Name">
            </form>
            {{/if}}
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Song</span>
                    <span>Artist</span>
                    <span>Release Date</span>
                </li>
            </ul>
            {{#if draftPlaylist}}
            {{#each draftPlaylist}}

            <li id="song-list-group"
                class="list-group-item d-flex justify-content-between">
                <span>{{this.name}}</span>
                <span>{{this.artist}}</span>
                <span>{{this.album_release}}</span>
            </li>
            {{/each}}
            {{/if}}
        </div>
        <form action="/makePlaylist" method="POST">
            <input type="hidden" name="currentPage"
                    value="{{currentPage}}">
            <input type="hidden" name="toBeCleared"
                    value="yes">
            <input type="hidden" name="newName" value="{{newPlaylistName}}">

            <button type="submit" class="btn">Clear Playlist</button>
            
        </form>
    </div>
</div>